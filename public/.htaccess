 RewriteEngine On

# # Si le fichier existe (css, js, img), on le sert directement
 RewriteCond %{REQUEST_FILENAME} -f
 RewriteRule ^ - [L]

# # Si le dossier existe, on le sert directement
 RewriteCond %{REQUEST_FILENAME} -d
 RewriteRule ^ - [L]

# # Sinon, tout passe par index.php
 RewriteRule ^ index.php [L]

# Blog listing
RewriteRule ^paroles-de-pro/?$ index.php?page=blog [L,QSA]

# Blog article
RewriteRule ^paroles-de-pro/([a-zA-Z0-9-]+)/?$ index.php?page=blog_show&slug=$1 [L,QSA]

# ✅ Compression GZIP optimisée
<IfModule mod_deflate.c>
  # Compression HTML, CSS, JavaScript, JSON, XML
  AddOutputFilterByType DEFLATE text/html text/plain text/css text/javascript application/javascript application/json application/xml text/xml image/svg+xml
  
  # Compression pour les polices
  AddOutputFilterByType DEFLATE application/x-font-ttf application/x-font-opentype application/font-woff application/font-woff2
  
  # Compression pour les autres types
  AddOutputFilterByType DEFLATE application/rss+xml application/atom+xml
  
  # Ne pas compresser les images déjà compressées
  SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|webp)$ no-gzip dont-vary
</IfModule>

# ✅ Compression Brotli (si disponible)
<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/css text/javascript application/javascript application/json application/xml text/xml image/svg+xml
  AddOutputFilterByType BROTLI_COMPRESS application/x-font-ttf application/x-font-opentype application/font-woff application/font-woff2
</IfModule>

# ✅ Cache assets optimisé
<IfModule mod_expires.c>
  ExpiresActive On
  
  # HTML - cache navigateur court mais serveur long
  ExpiresByType text/html "access plus 1 hour"
  
  # CSS et JS - cache long avec versioning
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/x-javascript "access plus 1 year"
  
  # Images - cache très long
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # Polices
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  
  # Autres
  ExpiresByType application/pdf "access plus 1 month"
  ExpiresByType application/json "access plus 0 seconds"
</IfModule>

# ✅ Headers de cache et performance
<IfModule mod_headers.c>
  # Cache-Control pour les assets statiques
  <FilesMatch "\.(css|js|png|jpg|jpeg|gif|webp|svg|ico|woff|woff2|ttf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
    Header append Vary Accept-Encoding
  </FilesMatch>
  
  # Pas de cache pour les fichiers PHP (sauf si géré par le code)
  <FilesMatch "\.php$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
  
  # Headers de sécurité et performance
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Preload pour les ressources critiques (optionnel, à adapter selon vos besoins)
  # Header add Link "</assets/css/style.css>; rel=preload; as=style"
</IfModule>

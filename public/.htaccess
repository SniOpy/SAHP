 RewriteEngine On

# # Si le fichier existe (css, js, img), on le sert directement
 RewriteCond %{REQUEST_FILENAME} -f
 RewriteRule ^ - [L]

# # Si le dossier existe, on le sert directement
 RewriteCond %{REQUEST_FILENAME} -d
 RewriteRule ^ - [L]

# # Sinon, tout passe par index.php
 RewriteRule ^ index.php [L]

# Blog listing
RewriteRule ^paroles-de-pro/?$ index.php?page=blog [L,QSA]

# Blog article
RewriteRule ^paroles-de-pro/([a-zA-Z0-9-]+)/?$ index.php?page=blog_show&slug=$1 [L,QSA]

# ✅ Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json image/svg+xml
</IfModule>

# ✅ Cache assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 30 days"
  ExpiresByType application/javascript "access plus 30 days"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

RewriteEngine On

# =====================================================
# SÉCURITÉ : BLOQUER L’ACCÈS AU FICHIER .env
# =====================================================
<Files ".env">
  Require all denied
</Files>

# =====================================================
# EMPÊCHER LE LISTING DE DOSSIERS
# =====================================================
Options -Indexes

# =====================================================
# REDIRECTION VERS /sahp/public
# =====================================================

# Redirection racine → sahp/public
RewriteRule ^$ sahp/public/ [L,R=301]

# Tout le reste vers sahp/public (si pas déjà dedans)
RewriteCond %{REQUEST_URI} !^/sahp/public/
RewriteRule ^(.*)$ sahp/public/$1 [L]
